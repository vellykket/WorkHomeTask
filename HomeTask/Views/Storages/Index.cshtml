@model IEnumerable<HomeTask.Models.Storage>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StorageName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StorageName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.StorageId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.StorageId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.StorageId">Delete</a> |
                <a asp-action="CalculateSum" asp-route-id="@item.StorageId">Calculate Sum</a> |
                <a asp-controller="ProductsInStocks" asp-action="ShowProductsInStock" asp-route-id="@item.StorageId">Show products in stock</a>
            </td>
        </tr>
}
    </tbody>
</table>
